<div class="container">

  <div class="row">
    <div>
     <%= link_to "新規投稿する", new_trip_path, class: 'btn btn-info text-light mt-2' %>
    </div>
    <div class="col-md-10 mx-auto">
    <h1>旅行の記録をここで！</h1>
    <h3>一覧ページ</h3>


    <table class="table table-striped table-bordered border-primary">
      <thead class="table-warning">
        <tr>
          <th>location</th>
          <th>explain</th>
          <th colspan="7"></th>
        </tr>
      </thead>
      <tbody>
        <% @trips.each do |trip| %>
        <tr>
          <td><%= trip.name %></td>
          <td><%= trip.explain %></td>
          <td colspan="4"></td>
          <td><%= link_to "Show", trip_path(trip.id), class: 'btn btn-info text-light' %></td>
          <td><%= link_to "Edit", edit_trip_path(trip.id), class: 'btn btn-success text-light' %></td>
          <td><%= link_to "Destroy", trip_path(trip.id), method: :delete, class: 'btn btn-danger text-light' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>
