<div class="container">

  <div class="row">
    <div>
     <%= link_to "新規投稿する", new_trip_path, class: 'btn btn-info text-light mt-2' %>
    </div>
    <div class="col-md-10 mx-auto text-center my-5">
      <h1>旅行の記録をここで！</h1>
    </div>


    <div class="row">
      <% @trips.each do |trip| %>
      <div class="col-lg-3 col-md-10 col-sm-12 ml-5 mb-5">
        <%= link_to trip_path(trip.id) do %>
          <%= image_tag trip.get_image, size: "240x180" %>
        <% end %>
        <br/>
        <div class="pt-1">
          投稿ユーザー：
          <%= trip.user.name %>
        </div>
      </div>

      <div class="col-6">
        <table class="table">
          <tr>
            <th>タイトル</th>
            <td><%= trip.title %></td>
          </tr>
          <tr>
            <th>場所</th>
            <td><%= trip.address%></td>
          </tr>
          <tr>
            <th>投稿日</th>
            <td><%= trip.created_at %></td>
          </tr>
        </table>
      </div>
        <% end %>
    </div>




    <table class="table table-striped table-bordered border-primary">
      <thead class="table-warning">
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Address</th>
          <th>Explain</th>
          <th colspan="7"></th>
        </tr>
      </thead>
      <tbody>
        <% @trips.each do |trip| %>
        <tr>

<!--投稿した写真を表示させたい                           -->

<!--1枚の画像を表示できるようにする-->
          <td>
            <%= link_to trip_path(trip.id) do %>
              <%= image_tag trip.get_image, size: "300x300" %>
            <% end %>
          </td>

<!--複数の画像を投稿できるようにしたい-->
          <!--<td>-->
          <!--  < if trip.images.attached? %>-->
          <!--    < trip.images.each do |image| %>-->
          <!--    <= image_tag image.variant(resize: '100x100') %>-->
          <!--    < end %>-->
          <!--  < end %>-->
          <!--</td>-->
<!--                                                     -->

          <td><%= trip.title %></td>
          <td><%= trip.address%></td>
          <td><%= trip.explain %></td>
          <td colspan="4"></td>
          <td><%= link_to "Edit", edit_trip_path(trip.id), class: 'btn btn-success text-light' %></td>
          <td><%= link_to "Destroy", trip_path(trip.id), method: :delete, class: 'btn btn-danger text-light' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>
